        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
         <ul class="navbar-nav mr-auto">
            <li class="nav-item ">
               <a class="nav-link" href="/">INICIO </a>
            </li>      
         {{#if sesion1}} 
            <li class="nav-item">
               <a class="nav-link" href='/listar'>CURSOS</a>
