            <button class="btn btn-primary my-2 my-sm-0" type="submit">Salir</button>
         </form>  
         
         {{else  sesion3}} 
            <li class="nav-item">
               <a class="nav-link" href="/cursos">VER CURSOS</a>
            </li>
